  "scripts": {
    "build": "run-s build:icons build:remix",
    "build:icons": "bun ./other/build-icons.ts",
    "build:remix": "react-router build",
    "predev": "bun run build:icons --silent",
    "dev": "cross-env NODE_ENV=development MOCKS=true node index.ts",
    "prisma:studio": "prisma studio",
    "format": "prettier --write .",
    "lint": "eslint .",
    "setup:env": "node --input-type=commonjs -e \"const fs = require('fs'); fs.copyFileSync('.env.example', '.env');\" && bunx prisma migrate deploy && bunx prisma generate --sql && bun run build:icons",
    "setup:local": "bun run build && node scripts/ensure-prisma-db.js && bunx prisma generate --sql && bunx prisma migrate deploy && bunx prisma db seed && bunx playwright install --with-deps chromium",
    "setup": "bun run setup:local",
    "start": "cross-env NODE_ENV=production node index.ts",
    "start:mocks": "cross-env NODE_ENV=production MOCKS=true node index.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "test:e2e": "bun run test:e2e:dev --silent",
    "test:e2e:dev": "playwright test --ui",
    "pretest:e2e:run": "bun run build",
    "test:e2e:run": "cross-env CI=true playwright test",
    "test:e2e:install": "bunx playwright install --with-deps chromium",
    "typecheck": "react-router typegen && tsc",
    "benchmark:data": "bun ./scripts/benchmark-data-load.ts",
    "benchmark:perf": "bun ./scripts/benchmark-performance.ts",
    "backfill:recipient-schedules": "bun ./scripts/backfill-recipient-schedules.ts",
    "validate": "run-p \"test -- --run\" lint typecheck test:e2e:run"
  },
  "prettier": "@epic-web/config/prettier",
  "eslintIgnore": [
    "/node_modules",
    "/build",
    "/public/build",
    "/playwright-report"
